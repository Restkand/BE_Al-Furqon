generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donation {
  id           Int      @id @default(autoincrement())
  title        String
  description  String   @db.Text
  amount       Float    @default(0)
  targetAmount Float
  image        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
